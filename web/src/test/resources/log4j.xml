<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="WARN">
      <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
          <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
       <File name="File1" fileName="./logs/testeditor.log" bufferedIO="false" advertiseURI="file://path/to/testeditor.log" advertise="true">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
       </File>
      </Appenders>
      <Loggers>
        <Logger name="org.testeditor.fixture.web" level="trace">
           <AppenderRef ref="File1"/>
        </Logger>
        <Root level="error">
          <AppenderRef ref="Console"/> 
          <AppenderRef ref="File1"/>
        </Root>
      </Loggers>
    </Configuration>
